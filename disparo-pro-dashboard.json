{
  "dashboard": {
    "id": null,
    "uid": "disparo-pro-bot-monitoring",
    "title": "Disparo Pro Bot Monitoring",
    "tags": ["disparo", "bot", "monitoring", "finance"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Saldo Atual",
        "description": "Último valor verificado do saldo na Disparo Pro",
        "type": "stat",
        "datasource": {
          "type": "loki",
          "uid": "${loki_datasource}"
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "${loki_datasource}"
            },
            "editorMode": "code",
            "expr": "{container=\"disparo-bot\"} | json | saldo != \"\" | lineformat \"{{.saldo}}\" | last",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "CRÍTICO"
                  }
                },
                "type": "value",
                "value": "0"
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 2000
                },
                {
                  "color": "green",
                  "value": 3000
                }
              ]
            },
            "unit": "currencyBRL",
            "decimals": 2
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Status do Bot",
        "description": "Status atual do bot de monitoramento",
        "type": "stat",
        "datasource": {
          "type": "loki",
          "uid": "${loki_datasource}"
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "${loki_datasource}"
            },
            "editorMode": "code",
            "expr": "count_over_time({container=\"disparo-bot\"} | json [5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "OFFLINE"
                  },
                  "1": {
                    "text": "ONLINE"
                  }
                },
                "type": "value",
                "values": [
                  {
                    "text": "OFFLINE",
                    "value": "0"
                  },
                  {
                    "text": "ONLINE",
                    "value": "1"
                  }
                ]
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 3,
        "title": "Histórico de Saldo (Últimos 7 Dias)",
        "type": "timeseries",
        "datasource": {
          "type": "loki",
          "uid": "${loki_datasource}"
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "${loki_datasource}"
            },
            "editorMode": "code",
            "expr": "{container=\"disparo-bot\"} | json | saldo != \"\" | lineformat \"{{.saldo}}\"",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "viz": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "currencyBRL"
          }
        },
        "gridPos": {
          "h": 10,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "id": 4,
        "title": "Alertas Enviados",
        "type": "logs",
        "datasource": {
          "type": "loki",
          "uid": "${loki_datasource}"
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "${loki_datasource}"
            },
            "editorMode": "code",
            "expr": "{container=\"disparo-bot\"} | json | alerta_enviado = \"true\" | lineformat \"Tipo: {{.tipo_alerta}} | Saldo: R$ {{.saldo}}\"",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 10,
          "w": 12,
          "x": 0,
          "y": 18
        },
        "options": {
          "dedupStrategy": "none",
          "enableLogDetails": true,
          "prettifyLogMessage": true,
          "showCommonLabels": false,
          "showLabels": true,
          "showTime": true,
          "sortOrder": "Descending",
          "wrapLogMessage": true
        }
      },
      {
        "id": 5,
        "title": "Status e Mensagens do Bot",
        "type": "table",
        "datasource": {
          "type": "loki",
          "uid": "${loki_datasource}"
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "${loki_datasource}"
            },
            "editorMode": "code",
            "expr": "{container=\"disparo-bot\"} | json | status != \"\" | lineformat \"Status: {{.status}} | {{.msg}}\"",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 10,
          "w": 12,
          "x": 12,
          "y": 18
        },
        "options": {
          "showHeader": true,
          "sortBy": []
        }
      },
      {
        "id": 6,
        "title": "Distribuição de Alertas por Tipo",
        "type": "piechart",
        "datasource": {
          "type": "loki",
          "uid": "${loki_datasource}"
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "${loki_datasource}"
            },
            "editorMode": "code",
            "expr": "{container=\"disparo-bot\"} | json | alerta_enviado = \"true\" | rate() by (tipo_alerta)",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 10,
          "w": 12,
          "x": 0,
          "y": 28
        },
        "options": {
          "pieType": "pie",
          "displayLabels": [
            "percent"
          ],
          "legend": {
            "displayMode": "list",
            "placement": "right",
            "showLegend": true
          }
        }
      },
      {
        "id": 7,
        "title": "Logs Recentes (Última Hora)",
        "type": "logs",
        "datasource": {
          "type": "loki",
          "uid": "${loki_datasource}"
        },
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "${loki_datasource}"
            },
            "editorMode": "code",
            "expr": "{container=\"disparo-bot\"} | json | lineformat \"{{.timestamp}} [{{.level}}] {{.msg}}\"",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 10,
          "w": 12,
          "x": 12,
          "y": 28
        },
        "options": {
          "dedupStrategy": "none",
          "enableLogDetails": true,
          "prettifyLogMessage": true,
          "showCommonLabels": false,
          "showLabels": true,
          "showTime": true,
          "sortOrder": "Descending",
          "wrapLogMessage": true
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ],
      "time_options": [
        "5m",
        "15m",
        "1h",
        "6h",
        "12h",
        "24h",
        "2d",
        "7d",
        "30d"
      ]
    },
    "templating": {
      "list": [
        {
          "name": "loki_datasource",
          "type": "datasource",
          "query": "loki",
          "current": {
            "value": "grafanacloud-logs",
            "text": "grafanacloud-logs"
          }
        },
        {
          "name": "time_range",
          "type": "interval",
          "query": "1h,6h,12h,24h,7d,30d",
          "current": {
            "value": "24h",
            "text": "24h"
          }
        },
        {
          "name": "log_level",
          "type": "query",
          "datasource": {
            "type": "loki",
            "uid": "${loki_datasource}"
          },
          "query": "label_values({container=\"disparo-bot\"}, level)",
          "current": {
            "value": "All",
            "text": "All"
          }
        }
      ]
    },
    "refresh": "30s",
    "version": 1
  },
  "folderId": 0,
  "message": "Dashboard criado para monitoramento do bot Disparo Pro",
  "overwrite": true
}